<Page x:Class="_422_Sidakov_Amir.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Sidakov_Amir.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid Margin="0,0,-137,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center"
                   Margin="10">

            <TextBlock Text="Введите ФИО для поиска:" 
                       FontSize="12" 
                       VerticalAlignment="Center"/>

            <TextBox x:Name="fioFilterTextBox" 
                     Margin="7,7,0,7" 
                     Width="150" 
                     TextChanged="fioFilterTextBox_TextChanged"/>

            <TextBlock Text="Сортировка по ФИО:" 
                       Margin="15,0,0,0"
                       FontSize="12" 
                       VerticalAlignment="Center"/>

            <ComboBox x:Name="sortComboBox" 
                      SelectionChanged="sortComboBox_SelectionChanged" 
                      Margin="7,0,0,0" 
                      Width="150"
                      SelectedIndex="0"
                      VerticalContentAlignment="Center" 
                      VerticalAlignment="Center">
                <ComboBoxItem Content="По возрастанию"/>
                <ComboBoxItem Content="По убыванию"/>
            </ComboBox>

            <CheckBox x:Name="onlyAdminCheckBox"
                      IsChecked="False" 
                      Checked="onlyAdminCheckBox_Checked" 
                      Unchecked="onlyAdminCheckBox_Unchecked"
                      Content="Только администраторы" 
                      VerticalContentAlignment="Center"
                      Margin="15,0,0,0"
                      FontSize="12"/>

            <Button x:Name="clearFiltersButton"
                    Content="Очистить фильтры" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="10,5" 
                    Margin="15,0,0,0"
                    Height="30"
                    FontSize="12" 
                    Click="clearFiltersButton_Click_1"/>
        </WrapPanel>

        <ListView Name="ListUser" 
                  Grid.Row="1" 
                  HorizontalContentAlignment="Center" 
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  Margin="10">

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="LightGray" 
                            BorderThickness="1" 
                            Margin="5" 
                            Padding="10"
                            Background="White"
                            CornerRadius="5">
                        <Grid Width="220" Height="280">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="{Binding FIO}" 
                                       TextWrapping="Wrap" 
                                       TextAlignment="Center"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>

                            <Image Grid.Row="1" 
                                   Width="120" 
                                   Height="120"
                                   Stretch="UniformToFill"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                                <Image.Source>
                                    <Binding Path="Photo">
                                        <Binding.TargetNullValue>
                                            <BitmapImage UriSource="..\source\repos\422_Sidakov_Amir\orig.jpeg"/>
                                        </Binding.TargetNullValue>
                                    </Binding>
                                </Image.Source>
                            </Image>

                            <TextBlock Grid.Row="2"
                                       Text="{Binding Role}" 
                                       TextAlignment="Center"
                                       FontSize="12"
                                       Foreground="Gray"
                                       Margin="0,10,0,5"/>

                            <TextBlock Grid.Row="3"
                                       Text="{Binding Login}" 
                                       TextAlignment="Center"
                                       FontSize="11"
                                       Foreground="DarkGray"
                                       FontStyle="Italic"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
