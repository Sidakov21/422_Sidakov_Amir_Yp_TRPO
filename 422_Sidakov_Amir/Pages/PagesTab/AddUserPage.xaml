<Page x:Class="_422_Sidakov_Amir.Pages.PagesTab.AddUserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Sidakov_Amir.Pages.PagesTab"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddUserPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*" />
            <RowDefinition Height="19*"/>
            <RowDefinition Height="32*" />
            <RowDefinition Height="32*" />
            <RowDefinition Height="32*" />
            <RowDefinition Height="32*" />
            <RowDefinition Height="32*" />
            <RowDefinition Height="32*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Логин" 
                   Grid.Row="0"
                   Grid.Column="0"
                   Margin="10,0,0,0"
                   FontSize="20" Grid.RowSpan="2" />
        <TextBlock Text="Пароль"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10,38,0,64"
                    FontSize="20" Grid.RowSpan="3" />
        <TextBlock Text="Роль"
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="10,0,0,64"
                    FontSize="20" Grid.RowSpan="2" />
        <TextBlock Text="ФИО"
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    FontSize="20" />
        <TextBlock Text="Фото (необязательно)"
                    Grid.Row="4"
                    Grid.Column="0"
                    Margin="10,64,573,0"
                    FontSize="20"
                    Grid.ColumnSpan="2"
                    Grid.RowSpan="2" />
        <TextBox x:Name="TBLogin"
                    Text="{Binding Login}"
                    Grid.Row="0"
                    ToolTip="Введите логин"
                    Grid.Column="1"
                    Margin="156,5,71,5" Grid.RowSpan="2" />
        <TextBox x:Name="TBPass"
                Text="{Binding Password}"
                Grid.Column="1"
                ToolTip="Введите пароль"
                Margin="156,5,71,5"
                Grid.Row="2" />

        <ComboBox Name="cmbRole"
                    SelectedItem="{Binding Role}"
                    ToolTip="Ввыберите роль"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="156,5,71,5">
            <ComboBoxItem Content="admin" />
            <ComboBoxItem Content="user" />
        </ComboBox>

        <TextBox x:Name="TBFio"
                    Text="{Binding FIO}"
                    Grid.Row="4"
                    ToolTip="Введите ФИО"
                    Grid.Column="1"
                    Margin="156,5,71,5" />
        <TextBox x:Name="TBPhoto"
                    Text="{Binding Photo}"
                    Grid.Row="5"
                    ToolTip="Добавте фото"
                    Grid.Column="1"
                    Margin="156,5,71,4" />

        <Button x:Name="ButtonSave"
                    Content="Сохранить"
                    Grid.Row="6"
                    Click="ButtonSave_Click"
                    Margin="468,15,0,15"
                    HorizontalAlignment="Left" Grid.Column="1" />
        <Button x:Name="ButtonClean"
                    Content="Очистить"
                    Grid.Row="6"
                    Click="ButtonClean_Click"
                    Margin="50,15,0,15"
                    HorizontalAlignment="Left" />
    </Grid>
</Page>
