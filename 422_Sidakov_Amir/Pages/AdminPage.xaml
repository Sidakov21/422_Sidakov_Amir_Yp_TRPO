<Page x:Class="_422_Sidakov_Amir.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_422_Sidakov_Amir.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid HorizontalAlignment="Center" Width="800">
        <Button x:Name="BtnTab1" 
                Content="Таблица пользователей" 
                HorizontalAlignment="Left" 
                Margin="68,160,0,0" 
                VerticalAlignment="Top" 
                RenderTransformOrigin="-1.326,0.371" 
                Height="41" 
                Width="181" 
                Click="BtnTab1_Click"/>

        <Button x:Name="BtnTab2" 
                Content="Таблица категорий" 
                HorizontalAlignment="Left" 
                Margin="348,160,0,0" 
                VerticalAlignment="Top" 
                RenderTransformOrigin="-1.326,0.371" 
                Height="41" 
                Width="172" 
                Click="BtnTab2_Click"/>
        <Button x:Name="BtnTab3" 
                Content="Таблица платежей" 
                HorizontalAlignment="Right"
                Margin="0,160,5,0"
                RenderTransformOrigin="-1.326,0.371"
                Height="41"
                Width="163" 
                Click="BtnTab3_Click" VerticalAlignment="Top"/>
        <Button x:Name="BtnTab4" 
                Content="Диаграммы" 
                HorizontalAlignment="Left" 
                Margin="364,321,0,0"
                VerticalAlignment="Top"
                RenderTransformOrigin="-1.326,0.371" 
                Height="41" 
                Width="132"
                Click="BtnTab4_Click"/>
        <Label Content="AdminPage"
            x:Name="labelCaptcha_Копировать"
            Margin="10,10,0,414"
            HorizontalAlignment="Left"
            Width="78" />
    </Grid>
</Page>
